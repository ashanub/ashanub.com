<section class="section is-large add-navbar-space" id="contact">
    <div class="container">
        <div class="columns">
            <div class="column is-half description-column">
                <h3 class="is-font-section-title is-font-color-highlight">Contact Me</h3>
                <p class="is-font-body is-font-color-white">Please get in touch with me for any queries.</p>
            </div>
            <div class="column is-half form-column">
                <form id="contact-form">
                    <div class="columns">
                        <div class="column is-half">
                            <div class="field">
                                <div class="control has-icons-left">
                                    <input type="text" class="input is-medium site-element-shadow-small"
                                           placeholder="Your Name" id="name">
                                    <span class="icon is-small is-left">
                                        <i class="fas fa-user"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="column is-half">
                            <div class="field">
                                <div class="control has-icons-left">
                                    <input type="email" class="input is-medium site-element-shadow-small"
                                           placeholder="Your Email" id="email">
                                    <span class="icon is-small is-left">
                                        <i class="fas fa-envelope"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="columns">
                        <div class="column">
                            <div class="field">
                                <div class="control">
                                    <textarea name="" placeholder="Your Message" id="message" cols="30" rows="10"
                                              class="textarea site-element-shadow-small is-medium"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="notification is-success site-element-shadow-very-small is-hidden" id="form-notification">
                        Message has been sent!
                    </div>
                    <button type="submit"
                            class="button is-pulled-right is-light is-primary hero-cta site-element-shadow-small"
                            id="talk-to-me">Send
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>